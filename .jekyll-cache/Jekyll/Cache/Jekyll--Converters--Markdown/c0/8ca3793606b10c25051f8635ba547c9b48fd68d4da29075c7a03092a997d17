<h4 id="prototype">Prototype</h4>

<div class="mermaid">
  flowchart LR
    A[Class B]
    B[Class C]
    C[Class D]
    subgraph Spring Container
    D[Spring Container]
    I[Spring Container]
    J[Spring Container]
    end
    F[Instance A]
    G[Instance A']
    H[Instance A'']
    A--getBean--&gt;D
    B--getBean--&gt;I
    C--getBean--&gt;J
    D&lt;-.manage.-&gt;F
    I&lt;-.manage.-&gt;G
    J&lt;-.manage.-&gt;H
