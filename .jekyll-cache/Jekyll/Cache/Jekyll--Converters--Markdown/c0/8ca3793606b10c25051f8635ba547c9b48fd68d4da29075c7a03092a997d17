	<span class="c">&lt;!-- ì—­ì „ ì œì–´ --&gt;</span>
	<span class="nt">&lt;bean</span> <span class="na">id=</span><span class="s">"cat"</span> <span class="na">class=</span><span class="s">"com.csupreme19.springdemo.Cat"</span> <span class="nt">/&gt;</span>
    
